<section>
  <h2 class="title-tweet">Sign in to your account</h2>
    <br />

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-new_session">
      <div>
        <%= f.label :email, class: "new-user-label" %><br />
        <%= f.email_field :email, class: "new-user-input", placeholder: "example@mail.com" %>
      </div>
    
      <div>
        <%= f.label :password, class: "new-user-label" %><br />
        <%= f.password_field :password, class: "new-user-input", placeholder: "******" %>
      </div>
    
      <div class="buttons">
        <%= f.submit "Log in", class: "form-button" %>
      </div>
    <% end %>
    <p class="auxiliar-text">Don't have an account?</p>  
    <%= link_to "Create an acount", new_registration_path(resource_name), class: "link" %><br />
  </div>
</section>
